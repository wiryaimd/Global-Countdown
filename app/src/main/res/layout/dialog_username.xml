<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/customcolor5">

    <TextView
        android:id="@+id/dialogusername_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:fontFamily="@font/mfont1"
        android:text="Username"
        android:textAlignment="center"
        android:textSize="20sp">

    </TextView>

    <EditText
        android:id="@+id/dialogusername_input"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/dialogusername_tv"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/customcolor1"
        android:hint="Input Username..."
        android:padding="6dp">

    </EditText>

    <Button
        android:id="@+id/dialogusername_btnsave"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_below="@id/dialogusername_input"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="6dp"
        android:background="@drawable/customcolor2"
        android:text="Save"
        android:textColor="@color/color1">

    </Button>

</RelativeLayout>
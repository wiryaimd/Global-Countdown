<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/itemglobal_cardview"
    android:layout_margin="12dp"
    app:cardBackgroundColor="@color/color6"
    app:cardCornerRadius="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/itemglobal_framebottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/itemglobal_linearvotes">

        </FrameLayout>

        <ImageView
            android:id="@+id/itemglobal_imgbg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/itemglobal_framebottom"
            android:alpha="0.6"
            android:scaleType="centerCrop">

        </ImageView>

        <TextView
            android:id="@+id/itemglobal_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="6dp"
            android:fontFamily="@font/mfont2"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:text="Countdown of my koncrod"
            android:textAlignment="center"
            android:textColor="#F3F3F3"
            android:textSize="22sp">

        </TextView>

        <LinearLayout
            android:id="@+id/itemglobal_linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/itemglobal_title"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/gradient1"
            android:orientation="horizontal"
            android:padding="6dp">

            <LinearLayout
                android:id="@+id/itemglobal_linearyears"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/itemglobal_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/mfont1"
                    android:text="12"
                    android:textSize="28sp">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/mfont1"
                    android:text="Year"
                    android:textSize="14sp">

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/itemglobal_linearmonths"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/itemglobal_months"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/mfont1"
                    android:text="0"
                    android:textSize="28sp">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/mfont1"
                    android:text="Months"
                    android:textSize="14sp">

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/itemglobal_lineardays"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/itemglobal_days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/mfont1"
                    android:text="0"
                    android:textSize="28sp">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/mfont1"
                    android:text="Days"
                    android:textSize="14sp">

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/itemglobal_linearhours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/itemglobal_hours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/mfont1"
                    android:text="0"
                    android:textSize="28sp">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/mfont1"
                    android:text="Hours"
                    android:textSize="14sp">

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/itemglobal_linearminutes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/itemglobal_minutes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/mfont1"
                    android:text="0"
                    android:textSize="28sp">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/mfont1"
                    android:text="Minutes"
                    android:textSize="14sp">

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/itemglobal_linearsecond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/itemglobal_seconds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/mfont1"
                    android:text="0"
                    android:textSize="28sp">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/mfont1"
                    android:text="Second"
                    android:textSize="14sp">

                </TextView>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/itemglobal_userpost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/itemglobal_linear1"
            android:layout_marginStart="12dp"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:text="Wiryaimd"
            android:textColor="#FFFFFF"
            android:textSize="12sp">

        </TextView>

        <LinearLayout
            android:id="@+id/itemglobal_linearvotes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/itemglobal_linear1"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="4dp"
            android:orientation="horizontal"
            android:paddingStart="6dp"
            android:paddingTop="2dp"
            android:paddingEnd="2dp"
            android:paddingBottom="2dp">

            <TextView
                android:id="@+id/itemglobal_upvotescount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="6dp"
                android:text="123"
                android:textColor="#FFFFFF"
                android:textSize="12sp">

            </TextView>

            <ImageView
                android:id="@+id/itemglobal_upvotes"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/upvotes">

            </ImageView>

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>